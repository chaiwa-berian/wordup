
Screen:
    id : root_s
    MDFloatLayout:
        MDLabel:
            id : label
            text: 'SIGN UP'
            pos_hint : {'center_y': -1}
            halign : 'center'
            font_style : 'H4'
            bold : True
        MDLabel:
            id : label1
            text: 'Hi!!! Create an account'
            pos_hint : {'center_y': -1}
            halign : 'center'
            font_style : 'H6'
            bold : True
        Image:
            id : image
            source: 'assets/emoo.jpg'
            pos_hint : {'center_x': .5, 'center_y': .8}
            size_hint: 1,1
        MDTextField:
            id : fname
            hint_text : 'First name'
            pos_hint : {'center_x': .5, 'center_y': .65}
            size_hint_x: .8
            mode : 'fill'
            radius : [24,]
            color_mode: 'custom'
            line_color_focus: 1,0,0,1
            on_focus: 
                image.source=app.first()
        MDTextField:
            id : sname
            hint_text : 'Second name'
            pos_hint : {'center_x': .5, 'center_y': .50}
            size_hint_x: .8
            mode : 'fill'
            radius : [24,]
            color_mode: 'custom'
            line_color_focus: 1,0,0,1
            on_focus:
                image.source=app.second()
        MDTextField:
            id : username
            hint_text : 'Preferred username'
            helper_text : 'Optional. Will be made for you if left blank'
            pos_hint : {'center_x': .5, 'center_y': .35}
            mode : 'fill'
            radius : [24,]
            size_hint_x: .8
            color_mode: 'custom'
            line_color_focus: 1,0,0,1
            on_focus: 
                image.source=app.third()
        MDRaisedButton:
            id : login
            text: 'Login'
            pos_hint : {'center_x': .5, 'center_y': .2}
            size_hint_x: .8
            md_bg_color: 1,0,0,1
            on_release: 
                app.login(fname, sname,username, login, image, label, label1)
                image.source=app.fourth()
                label.text='Welcome '+fname.text+" "+sname.text
                label1.text='Almost there finish setup'