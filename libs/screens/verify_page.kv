#:import colors kivymd.color_definitions.colors
#:import gch kivy.utils.get_color_from_hex
#:import environ os.environ

<Check@MDCheckbox>:
    group: 'group'
    size_hint: None, None
    size: dp(48), dp(48)







<VerifyPage>

    canvas:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size

    MDBoxLayout:
        id: box_1
        orientation: "vertical"
        size_hint: .2, .1
        pos_hint: {"center_x": .5, "center_y": .7}
        spacing: "10dp"
        

        FitImage:
            source: "assets/logo.jpeg"
            size_hint: None, None
            size : 200, 200
            pos_hint: {"center_x": .5}

        MDLabel:
            text: "WORDUP"
            adaptive_size: True
            text_size: None, self.font_size
            theme_text_color: "Primary"
            font_style: "H6"
            pos_hint: {'center_x': .5, 'center_y': .5}
            font_name: "data/ttf/JetBrainsMono-Medium.ttf"
        MDLabel:
            text: "Finish and we are good to go!!!."
            adaptive_size: True
            text_size: None, self.font_size
            theme_text_color: "Primary"
            pos_hint: {'center_x': .5, 'center_y': .5}
            font_name: "data/ttf/JetBrainsMono-Medium.ttf"
            font_style : "Button"

    MDBoxLayout:
        id: box_2
        adaptive_height: True
        orientation: "vertical"
        spacing: "20dp"
        padding: "10dp"
        pos_hint: {"center_y": .4}
        MDGridLayout:
            pos_hint: {'center_x': .5}
            cols : 3
            size_hint_y: None
            adaptive_height : True
            
            MDLabel:
                text: "Male"
                adaptive_size: True
                text_size: None, self.font_size
                theme_text_color: "Primary"
            MDLabel:
                size_hint_y: None
                height: self.texture_size[1]
            MDLabel:
                text: "Female"
                adaptive_size: True
                text_size: None, self.font_size
                theme_text_color: "Primary"

            Check:
                id: male_check
                active: True
            MDLabel:
                size_hint_y: None
                height: self.texture_size[1]
            Check:
                id: female_check
                on_active: 
                    male_check.on_active= False
    
        Widget:
            size_hint_y: None
            height: "50dp"
        MDBoxLayout:
            id: box_2
            adaptive_height: True
            orientation: "vertical"
            spacing: "10dp"
            padding: "10dp"
            pos_hint: {'center_x': .9, "center_y": .3}
            BoxLayout:
                spacing: "10dp"



                MDFlatButton:
                    id: button_cancel
                    text: "CANCEL"

                MDFillRoundFlatButton:
                    id: button_next
                    text: "NEXT"
                    on_release: app.root.current = "home"
        